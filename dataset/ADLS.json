{
	"name": "ADLS",
	"properties": {
		"linkedServiceName": {
			"referenceName": "ADLSConnection",
			"type": "LinkedServiceReference",
			"parameters": {
				"adlsconnection": {
					"value": "@concat(dataset().Environment,'-adlsconnectionstring')",
					"type": "Expression"
				}
			}
		},
		"parameters": {
			"Environment": {
				"type": "String"
			},
			"triggerTime": {
				"type": "string"
			},
			"pipelineID": {
				"type": "string"
			},
			"dataSource": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "Parquet",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(dataset().pipelineID,dataset().triggerTime)",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().dataSource",
					"type": "Expression"
				},
				"fileSystem": {
					"value": "@dataset().Environment",
					"type": "Expression"
				}
			},
			"compressionCodec": "gzip"
		},
		"schema": []
	}
}